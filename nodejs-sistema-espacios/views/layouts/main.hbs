<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#if title}}{{title}} - {{/if}}{{appName}}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
    
    {{#if additionalCSS}}
        {{{additionalCSS}}}
    {{/if}}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="bi bi-building"></i> {{appName}}
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link {{#if (eq currentPage 'dashboard')}}active{{/if}}" href="/dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#if (eq currentPage 'espacios')}}active{{/if}}" href="/espacios">
                            <i class="bi bi-grid-3x3"></i> Espacios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#if (eq currentPage 'reservas')}}active{{/if}}" href="/reservas">
                            <i class="bi bi-calendar-check"></i> Reservas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#if (eq currentPage 'usuarios')}}active{{/if}}" href="/usuarios">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#if (eq currentPage 'responsables')}}active{{/if}}" href="/responsables">
                            <i class="bi bi-person-badge"></i> Responsables
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#if (eq currentPage 'recursos')}}active{{/if}}" href="/recursos">
                            <i class="bi bi-box-seam"></i> Recursos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{#if (eq currentPage 'zonas')}}active{{/if}}" href="/zonas">
                            <i class="bi bi-geo-alt"></i> Zonas
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> Usuario
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/auth/perfil"><i class="bi bi-person"></i> Mi Perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form action="/auth/logout" method="POST" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid py-4">
        {{#if flash}}
            {{#each flash}}
                <div class="alert alert-{{@key}} alert-dismissible fade show" role="alert">
                    {{this}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/each}}
        {{/if}}

        {{{body}}}
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            <p class="mb-0">
                {{appName}} &copy; {{currentYear}} | 
                Versión {{version}} | 
                Base de datos: {{dbType}}
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Chart.js para gráficos -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Scripts personalizados -->
    <script src="/js/main.js"></script>
    
    {{#if additionalJS}}
        {{{additionalJS}}}
    {{/if}}
</body>
</html>
