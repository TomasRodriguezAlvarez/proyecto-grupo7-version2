# Configuración del servidor
NODE_ENV=development
PORT=3000
HOST=localhost

# Configuración de base de datos
# Opciones: sqlite, dynamodb
DB_TYPE=sqlite

# SQLite (para desarrollo local)
SQLITE_DB=./database/espacios.db

# DynamoDB (para producción en AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
# Para DynamoDB local descomenta la siguiente línea:
# DYNAMODB_ENDPOINT=http://localhost:8000

# Configuración de JWT
JWT_SECRET=sistema_espacios_secret_key_2025_change_in_production
JWT_EXPIRES_IN=24h

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Configuración de archivos
MAX_FILE_SIZE=5mb
UPLOAD_DIR=./uploads
EXCEL_TEMP_DIR=./temp

# Configuración de seguridad
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
SESSION_SECRET=sistema_espacios_session_secret_change_in_production

# Configuración de paginación
DEFAULT_PAGE_LIMIT=10
MAX_PAGE_LIMIT=100

# Configuración de cache
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# URLs base
BASE_URL=http://localhost:3000

# Configuración de email (opcional)
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@sistema-espacios.com

# Timezone
TZ=America/Santiago
