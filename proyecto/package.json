{
  "name": "sistema-gestion-espacios",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "predeploy": "node pre-deploy-check.js",
    "dev": "serverless offline",
    "deploy": "npm run predeploy && serverless deploy --stage dev --region us-east-1",
    "deploy:prod": "npm run predeploy && serverless deploy --stage prod --region us-east-1",
    "deploy:quick": "serverless deploy --stage dev --region us-east-1",
    "build:frontend": "cd ../frontend && npm ci && npm run build",
    "deploy:full": "npm run build:frontend && npm run deploy",
    "deploy:full:prod": "npm run build:frontend && npm run deploy:prod",
    "remove": "serverless remove",
    "info": "serverless info --verbose",
    "logs:worker": "serverless logs -f queueWorker -t",
    "test": "node simulate-deploy.js"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-offline": "^13.6.0",
    "serverless-offline-sqs": "^8.0.0",
    "serverless-s3-sync": "^3.2.0",
    "serverless-cloudfront-invalidate": "^1.12.0",
    "serverless-dotenv-plugin": "^6.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.883.0",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-sns": "^3.888.0",
    "@aws-sdk/client-sqs": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  }
}
