{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NEXT_PUBLIC_API_URL": "@api_url",
    "NEXTAUTH_SECRET": "@auth_secret",
    "NEXTAUTH_URL": "@auth_url"
  },
  "functions": {
    "pages/api/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "regions": ["iad1"],
  "github": {
    "autoJobCancelation": true
  }
}